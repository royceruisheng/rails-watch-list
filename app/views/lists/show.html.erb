<div class="container">
  <%= render @list %>
    <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    <%= link_to "Return to all lists", lists_path, class: "btn btn-secondary" %>
  <div class="row">
    <%= render @list.bookmarks %>
  </div>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, prompt: "Choose the movie to bookmark" %>
    <%= f.input :comment %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
